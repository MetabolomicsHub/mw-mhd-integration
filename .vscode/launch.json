    "version": "0.2.0",
    "configurations": [
        {
            "name": "mw2mhd Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "cwd":"${workspaceFolder}",
            "envFile": "${workspaceFolder}/.env",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "justMyCode": false
        },
        {
            "name": "mw2mhd Python Debugger: Create MHD File",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/scripts/create_mhd_file.py",
            "console": "integratedTerminal",
            "cwd":"${workspaceFolder}",
            "envFile": "${workspaceFolder}/.env",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "justMyCode": false
        }
    ]
}
